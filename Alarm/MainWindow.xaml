<Window x:Class="Alarm.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Alarm"
        mc:Ignorable="d"
        Title="Alarm" Height="450" Width="800" Background="{x:Null}" Foreground="{x:Null}" WindowStyle="None">
    <Window.Effect>
        <DropShadowEffect/>
    </Window.Effect>
    <Grid>
        <Button Click="Button_Exit_Click" Content="X" HorizontalAlignment="Left" Margin="501,211,0,0" VerticalAlignment="Top" Width="20" Height="20" Background="#FFB7C5CB" BorderBrush="#FF979797">
            <Button.ToolTip>Exit</Button.ToolTip>
        </Button>

    </Grid>
</Window>
